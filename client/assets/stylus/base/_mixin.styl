/**
 * 普通属性css3 前缀添加
 */
//定义存在的浏览器前缀
$prefix-for-webkit = true
$prefix-for-mozilla = true
$prefix-for-microsoft = true
$prefix-for-opera = true
$prefix-for-spec = true

$prefixer($property, $value, $prefixes)
  for $prefix in $prefixes
    if $prefix == webkit && $prefix-for-webkit == true
      -webkit-{$property}: $value
    else if $prefix == moz && $prefix-for-mozilla == true 
      -moz-{$property}: $value
    else if $prefix == ms && $prefix-for-microsoft == true 
      -ms-{$property}: $value  
    else if $prefix == o && $prefix-for-opera == true 
      -o-{$property}: $value  
    else if $prefix == spec && $prefix-for-spec == true 
      {$property}: $value

$prefixerValue($property, $value, $prefixes)
  for $prefix in $prefixes
    if $prefix == webkit && $prefix-for-webkit == true 
      {$property}: '-webkit-%s' % $value
    else if $prefix == moz && $prefix-for-mozilla == true 
      {$property}: '-moz-%s' % $value
    else if $prefix == ms && $prefix-for-microsoft == true 
      {$property}: '-ms-%s' % $value
    else if $prefix == o && $prefix-for-opera == true 
      {$property}: '-o-%s' % $value
    else if $prefix == spec && $prefix-for-spec == true 
      {$property}: $value



