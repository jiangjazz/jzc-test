/**
* 头部组件
*/
.theme--light.v-toolbar
  &.m-header
    height: $headerHeight
    background: $main
    color: $white
    box-shadow: 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12)
    .v-btn
      color $white
    .v-toolbar__title
      margin-left: 0
    .iconfont
      $font-size(20px)
    .m-header_headpic
      width: 23px
      height: 23px
      $border-radius(50%)
      box-shadow: 0px 0px 4px -1px rgba(255,255,255,0.2), 0px 1px 5px 0px rgba(255,255,255,0.14), 0px 1px 10px 0px rgba(255,255,255,0.12)