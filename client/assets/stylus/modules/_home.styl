.page-home
  width: 100%
  height: auto
  position: absolute
  top: 0
  bottom: 0
  .home_content
    max-height: 100vh
    overflow-y: auto
  // banner
  .home_ct
    width: 100%
  .home_banner
    width: 100%
    height: 100% !important
    .v-window__container,
    .v-image
      height: 100% !important
    .v-carousel__controls
      background: transparent
  // 推荐列表
  .recomList
    padding: 20px 16px
    .v-card
      &:not(:last-child)
        margin-bottom: 20px
      &__title
        $font-size(16px)
        font-weight: bold
      &__actions
        $font-size(12px)
        color: $text-disabled
        .v-icon
          &:not(:first-child)
            margin-left: 10px
        .author
          color: $text-disabled
